<div class="header">
  <h1>Register or Log In</h1>
</div>

<div class="content pure-g">  

  <div class="pure-u-1 pure-u-md-1-2">
    <h2>Log in to existing account</h2>
    <form class="pure-form pure-form-stacked" action="/login" method="post">
      <fieldset>
          <div class="pure-control-group">
              <label for="username">Username</label>
              <input id="username" name="username" type="text" placeholder="Username">
          </div>

          <div class="pure-control-group">
              <label for="password">Password</label>
              <input id="password" name="password" type="password" placeholder="Password">
          </div>

          <div class="pure-controls">
              {{!-- <label for="cb" class="pure-checkbox">
                  <input id="cb" type="checkbox"> I've read the terms and conditions
              </label> --}}

              <button type="submit" class="pure-button pure-button-primary">Log in</button>
          </div>
      </fieldset>
    </form>
  </div>


  <div class="pure-u-1 pure-u-md-1-2">
    <h2>Sign up for a new account</h2>
    <form class="pure-form pure-form-stacked" action="/register" method="post">
      <fieldset>
          <div class="pure-control-group">
              <label for="username">Username</label>
              <input id="username" name="username" type="text" placeholder="Username">
          </div>

          <div class="pure-control-group">
              <label for="password">Password</label>
              <input id="password" name="password" type="password" placeholder="Password">
          </div>

          <div class="pure-controls">
              {{!-- <label for="cb" class="pure-checkbox">
                  <input id="cb" type="checkbox"> I've read the terms and conditions
              </label> --}}

              <button type="submit" class="pure-button button-success">Sign Up</button>
          </div>
      </fieldset>
    </form>
  </div>


</div>
