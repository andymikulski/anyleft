<!DOCTYPE html>
<html>
<head>
  <title>AnyLeft</title>
  <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700|Abel' rel='stylesheet' type='text/css'>

  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no"></meta>

  <link rel="shortcut icon" href="assets/img/favicon.ico">
  <link rel="stylesheet" href="assets/css/bower.css" />
  <link rel="stylesheet" href="assets/css/app.css" />
</head>
<body>


  <div id="layout">
    <!-- Menu toggle -->
    <a href="#menu" id="menuLink" class="menu-link">
      <!-- Hamburger icon -->
      <img src="assets/img/icons/menu.png" />
    </a>

    <div id="menu">
      <div class="pure-menu">
        <a class="pure-menu-heading" href="/">AnyLeft</a>

        <ul class="pure-menu-list">
          {{#if user}}
            <li class="pure-menu-item">{{ user.username }}</li>
            <li class="pure-menu-item"><a href="/pantry" class="pure-menu-link">Your Items</a></li>
            <li class="pure-menu-item"><a href="/logout" class="pure-menu-link">Log Out</a></li>
          {{else}}
            <li class="pure-menu-item"><a href="/pantry" class="pure-menu-link">Your Items</a></li>
            <li class="pure-menu-item"><a href="/register" class="pure-menu-link">Sign Up</a></li>
            <li class="pure-menu-item"><a href="/login" class="pure-menu-link">Log In</a></li>
          {{/if}}
        </ul>
      </div>
    </div>

    <div id="main">
      {{{body}}}

      <div class="copyright">&copy; AnyLeft 2015</div>
    </div>

  </div>


  <script src="assets/js/lib/bower.js"></script>
  <script src="/socket.io/socket.io.js"></script>
  <script src="assets/js/lib/require.js" data-main="assets/js/app"></script>

  <script src="//localhost:35729/livereload.js"></script>

</body>
</html>